@page
@model TestApp.Pages.CRUD.updateModel
<h1>Update Employee</h1>


<form asp-action="OnPost" method="post" enctype="multipart/form-data">


    <table border="1" cellpadding="10">
        <tr>
            <td>Employee ID :</td>
            <td>
                <input name="Id" value="@Model.e.Id" readonly />
            </td>
        </tr>
        <tr>
            <td> Name :</td>
            <td><input name="Name" value="@Model.e.Name" /></td>
        </tr>
        <tr>
            <td>Email :</td>
            <td><input name="Email" value="@Model.e.Email" /></td>
        </tr>
        <tr>
            <td>Department :</td>
            <td><input name="Department" value="@Model.e.Department" /></td>
        </tr>
        <tr>
            <td>Update your photo :</td>
            <td>
                <input type="file" name="FilePath" />
            </td>

        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Save</button>
            </td>
        </tr>
     
    </table>

</form>
